{
    "version": 2,
    "builds": [
        { 
            "src": "server.js", 
            "use": "@vercel/node" 
          } 
        ],
    "routes": [ 
          { 
            "src": "/(.*)", 
            "dest": "/server.js",
            "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
            "headers": {
                "Access-Control-Allow-Origin": "https://image-analyzer-mu.vercel.app",
                "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,PATCH,OPTIONS",
                "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization",
                "Access-Control-Allow-Credentials": "true"
            }
          } 
    ],
    "env": {
      "GOOGLE_VISION_CREDENTIALS": "./google-vision-credentials.json",
      "GOOGLE_STORAGE_CREDENTIALS": "./google-storage-credentials.json",
      "GOOGLE_PROJECT_ID": "api-based-image-analyzer",
      "GOOGLE_STORAGE_BUCKET": "image-analyzer-storage",
      "PORT": "5000"
    }
  }